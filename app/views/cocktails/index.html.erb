<h1 class="text-center">
  Your Cocktails
</h1>
<ul>
  <% @cocktails.each do |cocktail| %>
    <div class="product">
      <div class='product-body'>
        <h3>
          <%= link_to cocktail.name, cocktail_path(cocktail) %>
        </h3>
        <p><%= cl_image_tag cocktail.photo.url(:thumbnail) %></p>

        <p><%= link_to 'remove', cocktail_path(cocktail), method: :delete %></p>

      </div>
    </div>
  <% end %>
</ul>
